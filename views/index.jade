extends layout

block content
	h1= title
	form(method="POST" action="/moviepost")
		table
			tr
				td
					label(for="title") Titel
					br
					input(type="text" name="title" id="title" required)
					br
				td
					label(for="year") Year
					br
					input(type="text" name="year" id="year" required)
					br
			tr
				td
					label(for="regi") Regi
					br
					input(type="text" name="regi" id="regi" required)
					br
				td
					label(for="length") Length of movie
					br
					input(type="text" name="length" id="length" required)
					br
		p Drama:
			input(type="checkbox" name="genre" value="drama" checked)
		p Action:
			input(type="checkbox" name="genre" value="action")
		p War:
			input(type="checkbox" name="genre" value="war")
		p Comedy:
			input(type="checkbox" name="genre" value="comedy")
		p Western:
			input(type="checkbox" name="genre" value="western")
		table
			tr
				td
					label(for="desc") Description
					br
					textarea(name="desc" id="desc" required)
					br
			tr
				td
					label(for="imgUrl") Image URL
					br
					input(type="text" name="imgUrl" id="imgUrl" required)
